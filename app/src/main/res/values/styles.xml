<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="SplitBarHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_split_line_1dp</item>
        <item name="android:background">@color/splitLine</item>
        <item name="android:layout_marginLeft">@dimen/margin_split_line_5dp</item>
        <item name="android:layout_marginRight">@dimen/margin_split_line_5dp</item>
    </style>

    <style name="SplitBarVertical">
        <item name="android:layout_width">@dimen/size_split_line_1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/splitLine</item>
        <item name="android:layout_marginTop">@dimen/margin_split_line_5dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_split_line_5dp</item>
    </style>
</resources>
